{
  "name": "avro-viewer",
  "publisher": "yasunari89",
  "displayName": "avro-viewer",
  "description": "This is a vscode extension that allows you to preview .avro files.",
  "icon": "images/icon.jpg",
  "version": "0.2.0",
  "engines": {
    "vscode": "^1.78.0"
  },
  "categories": [
    "Other"
  ],
  "keywords": [
    "avro"
  ],
  "activationEvents": [
    "onCommand:avro-viewer.open",
    "onStartupFinished"
  ],
  "main": "./dist/extension.js",
  "contributes": {
    "commands": [
      {
        "command": "avro-viewer.open",
        "title": "Open Avro"
      }
    ],
    "menus": {
      "editor/title": [
        {
          "when": "resourceExtname == .avro",
          "command": "avro-viewer.open",
          "group": "navigation"
        }
      ]
    }
  },
  "scripts": {
    "compile": "npm run check-types && node esbuild.config.js",
    "check-types": "tsc --noEmit",
    "watch": "npm-run-all -p watch:*",
    "watch:esbuild": "node esbuild.config.js --watch",
    "watch:tsc": "tsc --noEmit --watch",
    "package": "npm run check-types && node esbuild.config.js --production",
    "lint": "eslint . --ext .ts,.tsx",
    "test": "npm run lint && node ./test/runTest.js"
  },
  "dependencies": {
    "avsc": "^5.7.7",
    "prismjs": "^1.29.0",
    "react": "^18.3.1",
    "react-dom": "^18.3.1",
    "tabulator-tables": "^5.5.0"
  },
  "devDependencies": {
    "@types/glob": "^8.1.0",
    "@types/mocha": "^10.0.1",
    "@types/node": "16.x",
    "@types/prismjs": "^1.26.3",
    "@types/react": "^18.3.1",
    "@types/react-dom": "^18.3.0",
    "@types/tabulator-tables": "^6.3.1",
    "@types/vscode": "^1.78.0",
    "@typescript-eslint/eslint-plugin": "^7.0.0",
    "@typescript-eslint/parser": "^7.0.0",
    "@vscode/test-electron": "^2.3.0",
    "esbuild": "^0.24.0",
    "eslint": "^8.39.0",
    "eslint-config-airbnb": "^19.0.4",
    "eslint-config-airbnb-typescript": "^18.0.0",
    "eslint-config-prettier": "^10.1.8",
    "eslint-plugin-import": "^2.29.1",
    "eslint-plugin-jsx-a11y": "^6.8.0",
    "eslint-plugin-prettier": "^5.5.5",
    "eslint-plugin-react": "^7.33.2",
    "eslint-plugin-react-hooks": "^4.6.0",
    "glob": "^8.1.0",
    "mocha": "^10.2.0",
    "npm-run-all": "^4.1.5",
    "prettier": "^3.2.5",
    "typescript": "^5.0.4"
  },
  "repository": {
    "url": "git+https://github.com/yasunari89/avro-viewer.git"
  },
  "license": "SEE LICENSE IN LICENSE.txt",
  "author": "Yasunari Ota (https://github.com/yasunari89/)",
  "directories": {
    "test": "test"
  },
  "bugs": {
    "url": "https://github.com/yasunari89/avro-viewer/issues"
  },
  "homepage": "https://github.com/yasunari89/avro-viewer#readme"
}
